<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTransactionIdInTransaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3550609"
            android:textColor="#BFBFBF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvAmountInTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-510"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvContentInTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mở khóa Chương 149: Luân hồi không ngừng (đại kết cục) (4)"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvDateInTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025-03-18 01:31"
        android:textColor="#BFBFBF"
        android:textSize="12sp"
        android:layout_marginTop="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#333333" />
</LinearLayout>
